{
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "groupName": "dalgo & strongo non major deps",
      "groupSlug": "dalgo-strongo-minor-patch"
      "matchPackagePatterns": [
        "github.com/dal-go/",
        "github.com/strongo/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "3d-parties non major deps",
      "groupSlug": "3d-parties-minor-patch"
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
